<h1>Login</h1>


<% flash.each do |type, msg| %>
  <div class="alert alert-danger" role="alert">
    <%= msg %>
  </div>
<% end %>
<%= form_tag '/login' do %>

  <label>Email:</label>
  <%= text_field_tag :email %>
  <label>Password:</label>
  <%= password_field_tag :password %>
  <%= submit_tag "Submit" %>

<% end %> 

<p>No account?<%= link_to 'Register Now!', '/signup' %></p> 