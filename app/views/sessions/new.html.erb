<h1>Login</h1>


<% flash.each do |type, msg| %>
  <div class="alert alert-danger" role="alert">
    <%= msg %>
  </div>
<% end %>
<%= form_tag '/login' do %>

  <div class="form-group">
  Email: <%= text_field_tag :email %>
  </div>
  <div class="form-group">
  Password: <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Submit" %>

<% end %> 
<br/>
<p>No account? <%= link_to 'Register Now!', '/signup' %></p> 